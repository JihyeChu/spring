<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- MvcboardVO 클래스의 bean을 만든다. -->
	<bean id="mvcboardVO" class="com.tjoeun.vo.MvcboardVO"/>
	<!-- MvcboardList 클래스의 bean을 만든다. -->
	<bean id="mvcboardList" class="com.tjoeun.vo.MvcboardList"/> <!-- 기본 생성자로 생성되는 bean -->

	<!-- Service 클래스의 bean을 만든다. -->
	<bean id="insert" class="com.tjoeun.service.InsertService"/>
	<bean id="select" class="com.tjoeun.service.SelectService"/>
	<bean id="increment" class="com.tjoeun.service.IncrementService"/>	
	<bean id="contentView" class="com.tjoeun.service.ContentViewService" />
	<bean id="update" class="com.tjoeun.service.UpdateService" />
	<bean id="delete" class="com.tjoeun.service.DeleteService" />
	<bean id="reply" class="com.tjoeun.service.ReplyService" />
	
	<!-- MvcboardDAO 클래스의 bean을 만든다. -->
	<bean id="mvcboardDAO" class="com.tjoeun.dao.MvcboardDAO"/>

</beans>
